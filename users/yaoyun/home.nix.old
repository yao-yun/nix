{ config, pkgs, ... }:

{
	# nixpkgs.config.allowUnfree = true;
	home.stateVersion = "25.05";
	home.username = "yaoyun";
	home.homeDirectory = "/home/yaoyun";

	imports = [
	];

	home.packages = with pkgs; [
		neovim
		zoxide
		btop
		bat
		curl
		dust
		rink
		tlrc
		btop
		nmap
		fzf
		p7zip
		gnutar
		yazi
		fastfetch
		fishPlugins.bass
	];

	programs.home-manager.enable = true;

	programs.eza = {
		enable = true; 
		enableFishIntegration = true;
	};

	programs.git = {
		enable = true;
		settings = {
			user = {
				name = "Yaoyun Zhang";
				email = "yaoyun_zhang@outlook.com";
			};
		};
	};

	programs.starship = {
		enable = true;
		enableFishIntegration = true;
		settings = {
			add_newline = false;
		};
	};

	programs.fish = {
		enable = true;
		interactiveShellInit = ''
			set fish_greeting # disable greeting
		'';
		plugins = builtins.map (pluginName: {
			name = pluginName; 
			src = pkgs.fishPlugins.${pluginName}.src;
		}) [ 
			"bass" # bass depend on python
			"tide"
			"sponge"
			"pisces"
			"done"
			"colored-man-pages"
		];
	};

	# hyprland 
	programs.kitty.enable = true;
	wayland.windowManager.hyprland.enable = true;
	
	home.sessionVariables.NIXOS_OZONE_WL = "1";
	
}
